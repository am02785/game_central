%h1= t('.your_orders')

%table
  %thead
    %tr
      %th= t('.order_number')
      %th= t('.total_cost')
      %th

  %tbody
    - order_number = 0
    - @orders.each do |order|
      - order_number += 1
      %tr
        %td= order_number
        %td= order.total_cost
        %td= link_to 'Show', order

%br
