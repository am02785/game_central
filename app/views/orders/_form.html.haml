= form_for @order do |f|
  - if @order.errors.any?
    #error_explanation
      %h2= "#{pluralize(@order.errors.count, t('error'))} " + t('prohibited_this_order_from_being_saved')
      %ul
        - @order.errors.full_messages.each do |message|
          %li= message

  .field
    = f.hidden_field :customer_id, value: current_customer.id
  .field
    = f.label :name_on_credit_card
    = f.text_field :name_on_credit_card
  .field
    = f.label :CVV
    = f.text_field :CVV
  .field
    = f.label :credit_card_number
    = f.text_field :credit_card_number
  .field
    = f.label :credit_card_valid_until
    = f.date_select(:credit_card_valid_until, discard_day: true)
  .actions
    = f.submit t('buy')
